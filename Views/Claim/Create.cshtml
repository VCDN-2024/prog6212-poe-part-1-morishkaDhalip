@{
    ViewData["Title"] = "Submit Claim";
}

<style>
    body {
        background-color: #f4f4f4;
    }

    .container {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-top: 20px;
    }

    .header {
        background-color: #003366; /* Dark blue */
        color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .form-group label {
        color: #003366; /* Dark blue for labels */
    }

    .btn-primary {
        background-color: #0056b3;
        border: none;
        color: white;
    }

        .btn-primary:hover {
            background-color: #004080;
            color: white;
        }

    .info-text {
        padding: 10px;
        background-color: #e7f0fa; /* Light blue background for informational text */
        border-left: 5px solid #0056b3;
        margin-bottom: 20px;
    }
</style>

<div class="container">
    <div class="header text-center">
        <h1>@ViewData["Title"]</h1>
    </div>

    <div class="info-text">
        <p>Please fill out the form below to submit your claim. Ensure that the hours worked and hourly rate are entered correctly to avoid delays in processing your claim.</p>
    </div>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label for="hoursWorked">Hours Worked</label>
            <input type="number" class="form-control" id="hoursWorked" name="hoursWorked" required>
        </div>
        <div class="form-group">
            <label for="hourlyRate">Hourly Rate</label>
            <input type="number" class="form-control" id="hourlyRate" name="hourlyRate" step="0.01" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit Claim</button>
    </form>
</div>

